      </div>
    </div>
  </div>
     <div class="span4">
      <% @random1_promotions.each do |promotion| %>
      <table>
        <tr>
          <th rowspan="3"><%= link_to image_tag(promotion.image_url, class: "img-rounded"), promotion_path(promotion) %></th>
          <td class="button">$<%= promotion.price %></td>
        </tr>
        <tr>
          <td class="button"><%= link_to "View", promotion_path(promotion) %></td>
        </tr>
        <tr>
          <td class="button"><%= link_to "Buy Now", promotion_path(promotion) %></td>
        </tr>
      </table>

        <div>
          <p><strong><%= promotion.title %></strong></p>
