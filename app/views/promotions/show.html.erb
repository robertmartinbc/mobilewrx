<br>
<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-9 image_container"><%= image_tag(@promotion.image_url, class: "img-rounded") if @promotion.image? %>
     </div>
     <div class="col-md-3 well">
        <h4 align="center">Summary</h4>
        <br>
        <p align="center">Price: $<%= @promotion.price %></p>
        <br>
        <p align="center">Expires: <%= @promotion.expiration %></p>
        <br>
       <!--  <p align="center"><%= image_tag(@promotion.qrcode_url, class: "img-rounded") if @promotion.qrcode? %> -->
          <br>
          <br>
        </p>
      <div align="center">
      <%= form_tag charges_path do %>
      <%= hidden_field_tag :promotion_id, @promotion.id %>
        <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Cost of Promotion"
        data-amount=<%= @promotion.stripe_price %>></script>
      <% end %>
    </div>
    <br>
  </div>
</div>
</div>

<div class="col-md-9">
  <h3><%= @promotion.title %></h3>
      <div class="col-md-5 justify">
        <h4 class="description-headers">Details</h4>
          <p class="description-text"><%= @promotion.details %></p>
      </div>
      <div class="col-md-5 justify">
        <h4 class="description-headers">Highlights</h4>
          <p class="description-text"><%= @promotion.highlights %></p>
      </div>
      <div class="col-md-5 justify">
        <h4 class="description-headers">Company Information</h4>
          <p class="description-text"><%= @promotion.company_info %></p>
      </div>
      <div class="col-md-5 justify">
        <h4 class="description-headers">Fine Print</h4>
          <p class="description-text"><%= @promotion.fine_print %></p>
          <br>
      </div>
      <div class="col-md-4 pull-left" id="googleMap" style="width:275px;height:250px;">
      </div>
    </div>
  </div>
</div>
