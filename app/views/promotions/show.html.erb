<br>
<div class="row">
  <div class="span12">
    <div class="span8 image_container"><%= image_tag(@promotion.image_url, class: "img-rounded") if @promotion.image? %>
     </div>
     <div class="span3 thumbnail">
        <h4 align="center">Summary</h4>
        <br>
        <p align="center">Price: $<%= @promotion.price %></p>
        <br>
        <p align="center">Expires: <%= @promotion.expiration %></p>
        <br>
        <p align="center"><%= @promotion.website %></p>
        <br>
        <div align="center"><%= image_tag(@promotion.qrcode_url, class: "img-rounded") if @promotion.qrcode? %>
        </div>
        <br>
        <br>
      <div align="center">
      <%= form_tag charges_path do %>
        <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Cost of Promotion"
        data-amount="500"></script>
      <% end %>
    </div>
    <br>
  </div>
</div>
</div>

<div class="span7">
  <h3><%= @promotion.title %></h3>
      <div class="span3 justify">
        <h4>Details</h4>
          <p><%= @promotion.details %></p>
      </div>
      <div class="span3 justify">
        <h4>Highlights</h4>
          <p><%= @promotion.highlights %></p>
      </div>
      <div class="span3 justify">
        <h4>About</h4>
          <p><%= @promotion.about %></p>
      </div>
      <div class="span3 justify">
        <h4>Company Information</h4>
          <p><%= @promotion.company_info %></p>
      </div>
      <div class="span3 justify">
        <h4>Fine Print</h4>
          <p><%= @promotion.fine_print %></p>
      </div>
      <div class="span3 justify">
        <h4>Fine Print</h4>
          <p><%= @promotion.fine_print %></p>
      </div>
      <div class="span3">
      </div>
      <div class="span3 pull-center" id="googleMap" style="width:275px;height:275px;">
      </div>
    </div>
  </div>
</div>

