        <h3><%= promotion.title %></h3>
      <div class="span3">
        <h4>Details</h4>
        <p class="justify"><%= promotion.details %></p>
      </div>
      <div class="span3">
        <h4>Highlights</h4>
        <p class="justify"><%= promotion.highlights %></p>
      </div>
      <div class="span3">
        <h4>About</h4>
        <p class="justify"><%= promotion.about %></p>
      </div>
      <div class="span3">
        <h4>Fine Print</h4>
        <p class="justify"><%= promotion.fine_print %></p>
      </div>
