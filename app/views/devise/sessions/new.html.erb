<div class="container">
	<div class="row">
			<div class="col-lg-4 col-lg-offset-4">
				<h2>Log in</h2>
				<br>
					</div>
						<%= simple_form_for resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper_html: { class: 'form-group'}, input_html: { class: 'form-control'} } do |f| %>
		  		<div class="col-lg-3 col-lg-offset-4">
		  			<%= f.input :email, label: false, :autofocus => true, placeholder: 'Email' %>
		  		</div>
		  		<div class="col-lg-3 col-lg-offset-4">
		  			<%= f.input :password, label: false, placeholder: 'Password' %>
		  		</div>
		  		<div class="col-lg-3 col-lg-offset-4">
		  			 <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
		  		</div>
		  		<div class="col-lg-4 col-lg-offset-4">
		  			<br>
		  			 <%= render "devise/shared/links" %>
		  		</div>
				<% end %>
		</div>
	</div>
</div>
</div>
