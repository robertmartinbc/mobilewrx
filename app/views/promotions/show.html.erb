<div class="row">
  <div class="span12">
       <div class="span7 well pull-left image_container"><%= image_tag(@promotion.image_url, class: "image-rounded") if @promotion.image? %>
        <div>
        <h3><%= @promotion.title %></h3>
      </div>
      <div class="span6 well">
          <p class="justify"><%= @promotion.details %></p>
      </div>
       </div>
       <div class="span1">
    </div>
     <div class="span3 well">
        <h4 align="center">Highlights</h4>
        <br>
        <p align="center">Price: $<%= @promotion.price %></p>
        <br>
        <p align="center">Expires: <%= @promotion.expiration %></p>
        <br>
        <p align="center"><%= @promotion.website %></p>
        <br>
        <div align="center"><%= image_tag(@promotion.qrcode_url, class: "image-rounded") if @promotion.qrcode? %>
        </div>
        <br>
        <br>
      <div align="center">
        <%= form_tag charges_path do %>
          <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Cost of Promotion"
          data-amount="500"></script>
        <% end %>
      </div>
      <br>
      </div>
    </div>
  </div>
</div>

